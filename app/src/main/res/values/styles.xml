<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/crop_background</item>
        <item name="colorPrimary">#171717</item>
        <item name="colorPrimaryDark">#090909</item>
        <item name="colorAccent">#121010</item>
    </style>

    <style name="AppTheme.LoginRegister" parent="AppTheme">
        <item name="colorError">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/crop_background</item>
        <item name="colorControlNormal">#171717</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorButtonNormal">#1B1B1B</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
    </style>

    <style name="AppTheme.Profile" parent="AppTheme">
        <item name="colorError">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/crop_background</item>
        <item name="colorButtonNormal">#171717</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorError">@color/colorAccent</item>
    </style>


</resources>
